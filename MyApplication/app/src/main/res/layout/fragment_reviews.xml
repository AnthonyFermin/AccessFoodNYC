<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:id="@+id/writer_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="16dp"
                android:id="@+id/review_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/review_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="Rate this truck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/fiveStar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/grade_5"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_5star"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/five_stars"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourStar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView19"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/grade_4"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_4star"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/four_stars"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/threeStar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:src="@drawable/ic_star_rate_white_18dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/grade_3"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_3star"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/three_starts"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/twoStar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/grade_2"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_2star"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/two_stars"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/oneStar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/grade_1_white"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:id="@+id/imageView11"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:src="@drawable/ic_star_rate_white_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/grade_1"
                        android:src="@drawable/ic_grade_black_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_1star"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/one_star"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_margin="8dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>

            <TextView
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:textSize="20sp"
                android:textColor="@color/toolbarTextColorSecondary"
                android:id="@+id/textView_no_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/writer_info"/>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_review"
            android:src="@drawable/ic_add_white_24dp"
            app:elevation="6dp"
            app:backgroundTint="@color/accentColor"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:pressedTranslationZ="12dp"
            />



    </RelativeLayout>



</LinearLayout>

