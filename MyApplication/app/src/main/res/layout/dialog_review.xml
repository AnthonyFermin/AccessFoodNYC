<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_marginBottom="-35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FF0000">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/review_dialog_round_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:scaleType="fitStart"
            android:id="@+id/review_background_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/reviewpic"
            android:layout_marginBottom="-55dp" />


        <TextView
            android:id="@+id/dialog_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:id="@+id/ratingBar"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <TextView
            android:id="@+id/dialog_review_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/accentColor">

            <EditText
                android:hint="Title"
                android:id="@+id/editText_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/accentColor">

            <EditText
                android:hint="Description"
                android:id="@+id/editText_dialog_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>