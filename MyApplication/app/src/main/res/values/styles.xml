<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:textColorHint">@color/accentColor</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:dialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
    </style>

    <style name="MapsTheme" parent="AppTheme.Base"></style>

    <style name="ToolBarStyle" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/toolbarTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/toolbarTextColorSecondary</item>
    </style>

    <style name="LoginTheme" parent="AppTheme.Base">
        <item name="android:editTextColor">@color/accentColor</item>
        <item name="android:textColorSecondary">@color/accentColor</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
