<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="color">@color/primaryColorDark</item>
        <item name="android:textColorHint">@color/accentColor</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:dialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
    </style>

    <style name="MapsTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="translucent" parent="translucent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--true背景灰色 false背景白色 -->
    </style>


    <style name="LoginTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:editTextColor">@color/accentColor</item>
        <item name="android:textColorSecondary">@color/accentColor</item>
        <item name="android:textColorHint">@color/accentColor</item>
        <item name="color">@color/accentColor</item>
    </style>

</resources>
