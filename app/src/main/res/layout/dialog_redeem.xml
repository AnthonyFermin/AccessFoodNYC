<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_box">



    <TextView
        android:id="@+id/redeem_amount"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="72dp"
        android:text="20%"
        android:textColor="@color/accentColor"
        android:background="@drawable/circle_coupon"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/redeem_name"
        android:paddingTop="16dp"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:text="C4Q Tacos"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/redeem_address"
        android:layout_gravity="center_horizontal"
        android:text="31-00 47th Ave, Long Island City"
        android:textColor="@color/toolbarTextColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/redeem_expiration"
        android:padding="16dp"
        android:textColor="@color/black"
        android:text="Expiration Date : 05/12/2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/button_redeem"
            android:textColor="@color/white"
            android:text="Redeem"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/redeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>